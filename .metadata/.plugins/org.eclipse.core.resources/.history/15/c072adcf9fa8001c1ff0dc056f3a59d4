
//ALGORITMO QUE CALCULA O QUE DEVE SER PAGO POR UM PRODUTO
//CONSIDERANDO A PREÇO NORMAL DE ETIQUETA E A ESCOLHA DA
//CONDIÇÃO DE PAGAMENTO

package exercicio;

import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int codigo;
		double pNormal, pPago;
		
		System.out.println("Digite o valor do Produto: ");
		pNormal = sc.nextDouble();
		System.out.println("Digite o código da forma de pagamento: ");
		codigo = sc.nextInt();
		
		switch(codigo) {
		case 1: System.out.print("À vista em dinheiro ou cheque, receber 10% de desconto\n");
				pPago = pNormal - (pNormal * 0.1);
				System.out.printf("O valor a ser pago é: " + pPago);
				break;
		case 2: System.out.print("À vista no cartão de credito, recebe 5% de desconto\n");
				pPago = pNormal - (pNormal * 0.05);
				System.out.printf("O valor a ser pago é: " + pPago);
				break;
		case 3: System.out.print("Em duas vezes, preço normal de etiqueta sem juros\n");
				pPago = pNormal / 2;
				System.out.printf("O valor a ser pago é duas parcelas de: " + pPago);
				break;
		case 4: System.out.print("Em tres vezes, preço normal mais juros de 10%\n");
				pPago = (pNormal / 3) + ((30 / 3) * 0.3);
				System.out.printf("O preço a ser pago é tres parcelas de: " + pPago);
				break;
		default: System.out.print("Código ínvalido");
		}
		sc.close();

	}

}
