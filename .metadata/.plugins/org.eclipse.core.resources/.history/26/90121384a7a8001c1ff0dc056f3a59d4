/********************************************************************
 *ELABORAR UM ALGORITMO QUE LEIS DOIS NÚMEROS INTEIROS E A OPERAÇÃO 
 *ARITMÉTICA DESEJADA E CALCULAR A RESPOSTA ADEQUADA
 ********************************************************************/

package numerosInteiroseOperação;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("\n************MENU***********\n");
		System.out.print("Opção 1: Adição\n");
		System.out.print("Opção 2: Subtração\n");
		System.out.print("Opção 3: Multiplicação\n");
		System.out.print("Opção 4: Divisão\n");
		System.out.print("***************************");
				
		
		int X1, X2, R, opcao;
		
		System.out.print("Digite os Valores de X1 e X2: ");
		X1 = sc.nextInt();
		X2 = sc.nextInt();
		
		System.out.print("Digite a opção desejada: ");
		opcao = sc.nextInt();
		switch(opcao) {
			case 1:
				R = X1 + X2;
				System.out.print("O resultado da adição é: " + R);
				break;
			case 2:
				R = X1 - X2;
				System.out.print("O resultado da subtração é: " + R);
				break;
			case 3:
				R = X1 * X2;
				System.out.print("O resultado da multiplicação é: " + R);
				break;
			case 4:
				R = X1 / X2;
				System.out.print("O resultado da Divisão é: " + R);
				break;
			default: System.out.print("Operação Ínvalida!!");
		}
		
		sc.close();
	}

}
